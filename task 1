        "ensure AI‚Äôs growth remains aligned with human values.\n",
        "\"\"\"\n",
        "\n",
        "# Display original text length\n",
        "print(\"üîπ Original text length:\", len(input_text.split()), \"words\\n\")\n",
        "\n",
        "# Generate summary\n",
        "summary = summarizer(input_text, max_length=100, min_length=30, do_sample=False)[0]['summary_text']\n",
        "\n",
        "# Display the summary\n",
        "print(\"üî∏ Summary:\\n\")\n",
        "print(summary)\n"
